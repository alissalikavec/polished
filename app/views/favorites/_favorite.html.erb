<% if policy(Favorite.new).create? %>
  <% if favorite = current_user.favorited(polish) %>
     		<%= link_to [polish, favorite], class: 'btn btn-default', method: :delete do %>
     			<i class="fa fa-heart pink" title="Click to unfavorite"></i> Favorited
     		<% end %>
   			<% else %>
     		 <%= link_to [polish, Favorite.new], class: 'btn btn-default', method: :post do %>
     			<i class="fa fa-heart" title="Click to favorite"></i> Add to Favorites
     		 <%end%>
         <% end %>
<% end %>