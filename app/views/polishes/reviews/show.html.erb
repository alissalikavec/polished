<h1><%= @review.title %></h1>
<p><%= @review.body %></p>
<small>Written about <%= @polish.name %></small>
<% if policy(@review).edit? %>
      <%= link_to "Edit", edit_polish_review_path(@polish, @review), class: 'btn btn-success' %>
<% end %>
<% if policy(@review).destroy? %>
       <%= link_to "Delete", [@polish, @review], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this review?' } %>
  <% end %>