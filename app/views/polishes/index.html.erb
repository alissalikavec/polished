<h1>All Polishes</h1>
<% if policy(Polish.new).create? %>
<%= link_to "New Polish", new_polish_path, class: 'btn btn-success' %>
<% end %>

<% @polishes.each do |polish| %>
<div class="media">
	<div class="media-body">
		<h4 class="media-heading">
			<%= link_to polish.name, polish %>
		</h4>
		<small>
			submitted <%= time_ago_in_words(polish.created_at) %> ago by <%= polish.user.name %>
		</small>
	</div>
</div>
<% end %>